<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivityCandidate">

    <activity
        android:id="@+id/mainActivityCandidate"
        android:name="com.example.jobretriever.MainActivityCandidate"
        android:label="MainActivityCandidate"
        tools:layout="@layout/activity_main_candidate"/>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.jobretriever.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_candidateHomeFragment"
            app:destination="@id/candidateHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/candidateHomeFragment"
        android:name="com.example.jobretriever.CandidateHomeFragment"
        android:label="CandidateHomeFragment" />
</navigation>