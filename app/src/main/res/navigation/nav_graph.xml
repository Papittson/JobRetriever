<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">


    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.jobretriever.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_candidateHomeFragment"
            app:destination="@id/candidateHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/candidateHomeFragment"
        android:name="com.example.jobretriever.CandidateHomeFragment"
        android:label="CandidateHomeFragment" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.jobretriever.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.jobretriever.SignUpFragment"
        android:label="SignUpFragment" />
</navigation>